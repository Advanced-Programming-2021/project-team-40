<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="GUI.ChatBox"
            prefHeight="600.0" prefWidth="750.0">
    <VBox>
        <HBox alignment="TOP_CENTER">
            <Button alignment="TOP_LEFT" text="BACK" onMouseClicked="#back"/>
            <Label fx:id="pinnedMessageLabel"/>
        </HBox>
        <ScrollPane fx:id="chatScrollPane" layoutY="40" layoutX="30" prefHeight="350" prefWidth="600">
            <VBox fx:id="chatVBox" spacing="5"/>
        </ScrollPane>
        <HBox alignment="BOTTOM_CENTER">
            <TextField fx:id="messageToSend" text="Message" prefWidth="300"/>
            <Button text="SEND" prefWidth="50" onMouseClicked="#sendMessage"/>
        </HBox>
    </VBox>
</AnchorPane>
